.card-blog 
    @media screen and (min-width: desktop-min)
        width 298px 
        height 420px  
        background-color tertiaryColor 
        margin-bottom 53px
        img 
            width 100% 
            height 300px 
            object-fit cover  
    .infos
        @media screen and (min-width: desktop-min)
            position relative
            background branco
            border 2px solid #d1d0d7
            min-height 120px
            padding 28px 35px 15px 21px
        .title 
            font-size 18.72px 
            font-weight weight-strong 
            color primaryColor  
            @media screen and (min-width: mobile-min) and (max-width: tablet-max)  
                font-size 14.9752px  
                border-bottom 1px solid secondaryColor 
                text-align left 
                padding-bottom 18px 
                margin-bottom 18px
            &:after 
                border-color: hsla(0,0%,100%,0) hsla(0,0%,100%,0) #fff;
                border-width: 12px;
                margin-left: -130px;     
            &:before 
                border-color: rgba(209,208,215,0) rgba(209,208,215,0) #d1d0d7;
                border-width: 15px;
                margin-left: -133px; 
                bottom: 100%;
                left: 50%;
                border: solid transparent;
                content: " ";
                height: 0;
                width: 0;
                position: absolute;
                pointer-events: none;
    a 
        
        &:hover 
            .title
                color secondaryColor  
                transition all .35s ease-in-out
            img 
                transition all .35s ease-in-out 
