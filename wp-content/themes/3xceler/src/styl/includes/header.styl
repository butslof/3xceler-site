    .hamb.open-hamb { 
        
    
        span {
                transition: .3s all;

        &:first-of-type {
            transform: rotate(-45deg);
            margin: 0;
        }

        & + span {
            transform: rotate(45deg);
            margin: 0;
            top: -3px;
            position: relative;
                }
                
                &:last-of-type {
                    opacity: 0;
                }
        }
    }
