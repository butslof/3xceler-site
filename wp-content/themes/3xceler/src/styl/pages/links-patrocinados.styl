    #analyses   
        padding-top 60px 
        background-image url('../../imgs/banner/bg-graphlines.jpg')  
        background-size cover 
        background-position center bottom 
        margin-bottom 83px
        @media screen and (min-width: mobile-min) and (max-width: tablet-max) 
            padding-top 21px
            margin-bottom 231px
        .col-text  
            .box 
                display flex 
                flex-flow wrap
            .stat-instance 
                width 43.46% 
                display flex
                flex-direction column
                align-items center    
                margin-bottom 47px 
                margin-right 27px
            .stat-instance .main-num {
                color: #1b1437;
                font-weight: 700;
                margin-bottom: 34px;
            }
            .stat-instance .main-num {
                font-size: 140px;
                line-height: 86px;
            }
            .stat-instance .plus {
                top: -50px;
                font-size: 80px;
            }
            .stat-instance .plus {
                color: #b06eab;
                position: relative;
                margin-right: 5px;
                font-weight: 400;
            }
            .stat-instance span:not(.plus):not(.main-num) {
                width: 100%;
                display: block;
            } 
            .stat-instance .first-line {
                font-size: 40px;
                letter-spacing: 11.8px;
            }
            .stat-instance .first-line {
                color: #cbdb2a;
                font-weight: 700;
                text-transform: uppercase;
            } 

            .stat-instance span:not(.plus):not(.main-num) {
                width: 100%;
                display: block;
            }
            .stat-instance:first-of-type .second-line {
                font-size: 22px;
                letter-spacing: .44px;
            }
            .stat-instance .second-line {
                color: #bebebf;
            }
            .stat-instance:first-of-type .third-line {
                letter-spacing: 6.5px;
                font-size: 24px;
            }
            .stat-instance .third-line {
                color: #6d6e71;
                font-weight: 700;
            }
            .stat-instance:nth-of-type(2) .second-line {
                font-size: 30px;
                letter-spacing: 12px;
                white-space: pre;
            }
            .stat-instance:nth-of-type(2) .third-line {
                font-size: 34px;
                letter-spacing: 17px;
            } 
            .stat-instance:nth-of-type(3) .first-line {
                letter-spacing: -1.2px;
            }
            .stat-instance:nth-of-type(3) .second-line {
                letter-spacing: 4.5px;
            } 
            .stat-instance:nth-of-type(3) .third-line {
                font-size: 24px;
                letter-spacing: 21.6px;
                padding-left: 6px;
            }
            .stat-instance .second-line {
                font-size: 34px;
            }
            .stat-instance:last-of-type .second-line {
                letter-spacing: 18px;
            }
            .stat-instance:last-of-type .third-line {
                font-size: 26px;
                letter-spacing: 9.5px;
            }  
            @media screen and (min-width: mobile-min) and (max-width: tablet-max) 
                .stat-instance .main-num {
                    font-size: 60px;
                    margin-bottom -9px
                }
                .stat-instance .plus {
                    top: -13px;
                    font-size: 24px;
                }
                .stat-instance .first-line {
                    font-size: 18px;
                    letter-spacing: 4.8px;
                }
               
                .stat-instance:nth-of-type(2) .main-num {
                    left: -13px;
                }
                .stat-instance:nth-of-type(2) .second-line {
                    letter-spacing: 3.68px;
                }
                .stat-instance .second-line {
                    font-size: 15px;
                } 
                .stat-instance:nth-of-type(2) .third-line {
                    letter-spacing: 4px;
                } 
                .stat-instance:nth-of-type(3) .first-line {
                    letter-spacing: -.54px;
                }
                .stat-instance:nth-of-type(3) .second-line {
                    letter-spacing: 2.4px;
                }
                .stat-instance:nth-of-type(3) .third-line {
                    letter-spacing: 6.4px;
                    padding-left: 4px;
                }
                .stat-instance .first-line {
                    font-size: 18px;
                    letter-spacing: 4.8px;
                } 
                .stat-instance:last-of-type .second-line {
                    letter-spacing: 7.55px;
                }
                .stat-instance:last-of-type .third-line {
                    letter-spacing: 1.92px;
                }
                .stat-instance .second-line {
                    letter-spacing: .62px;
                    white-space: normal;
                    line-height: 11px !important; 
                    font-size 12px !important 
                    margin-bottom 7px
                }
                .stat-instance .third-line {
                    letter-spacing: 4.9px;
                    white-space: normal;
                    padding-left: 4px;
                    font-size 12px !important 
                    margin-bottom 7px 
                    line-height: 12px;
                } 
                .stat-instance{
                    margin-right 19px 
                    margin-bottom 0px
                }
                .disclaimer{
                    margin: 0 auto;
                    margin-top: 13px;
                }         
        .col-img 
