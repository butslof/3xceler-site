 #como-funciona
    background-size cover !important
    backgroud-position center  !important
    background-repeat no-repeat !important
    padding-bottom 49px

    @media screen and (min-width: mobile-min) and (max-width: tablet-max) 
        padding-top 42px

    .title-large-full 
        font-size 142.083px 
        line-height 130px
        span 
            color branco  
        @media screen and (min-width: mobile-min) and (max-width: tablet-max) 
            font-size 37.083px
            line-height 39px
    .title-link 
        color branco
        font-size 27.6666px 
        background-color primaryColor 
        padding-left 5px 
        padding-right 5px
        padding-bottom 5px 
        padding-top 5px 
        display block 
        margin-bottom 15px 
        width fit-content
        margin-top 20px 
        @media screen and (min-width: mobile-min) and (max-width: tablet-max) 
            font-size 22px

    .line-items
        margin-top 20px
        @media screen and (min-width: desktop-min)   
            visibility visible
        .timeline-step+.timeline-step:before {
            content: "";
            display: block;
            position: absolute;
            top: 99px;
            left: -58px;
            width: 60px;
            background-color: #b06eab;
            height: 5px;
        }
        .timeline-step
            width 16.53% !important
            position relative
            margin-right 54px   
            @media screen and (min-width: mobile-min) and (max-width: tablet-max) 
                width 68.53% !important
            .svg-square-holder 
                width 100%
                min-height: 225px;
                background: url(../imgs/icon-shape-items.png) no-repeat 50%/contain !important;
                position: relative; 
                .icon 
                    position: absolute;
                    top: 50%;
                    transform: translateY(-50%);
                    left: 0;
                    right: 0;
                    margin: auto; 
            .item-title
                font-size 25.8334px 
                font-weight weight-strong 
                color primaryColor 
                min-height 105px 
                margin-top 28px 
                margin-bottom 20px 
                @media screen and (min-width: mobile-min) and (max-width: tablet-max) 
                    font-size 18px
                    min-height 44px
            p 
                line-height 18px 
                color primaryColor   
                @media screen and (min-width: mobile-min) and (max-width: tablet-max) 
                    font-size 12px 
                    strong 
                        font-size 12px  
                    span 
                        font-size 12px 
                        strong 
                            font-size 12px 
                span 
                    line-height 18px 
                    color primaryColor 
                .fa-long-arrow-right
                    color secondaryColor 